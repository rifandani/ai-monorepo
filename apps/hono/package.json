{
  "name": "@workspace/hono",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "description": "Bulletproof Hono 4 server template",
  "author": "Tri Rizeki Rifandani",
  "license": "MIT",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "db:pull": "drizzle-kit pull",
    "db:push": "drizzle-kit push",
    "db:gen": "dotenvx run -- drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed-images": "dotenvx run -- bun src/core/db/seed-images.ts",
    "db:studio": "drizzle-kit studio --port 3003 --verbose",
    "test": "bun test",
    "dev": "bun run --hot --preload src/instrumentation.ts src/bun.ts",
    "node:dev": "dotenvx run -- tsx watch --import src/instrumentation.ts src/node.ts",
    "node:build": "tsc -p .",
    "node:start": "node ./dist/node.js",
    "mcp:inspector": "npx -y @modelcontextprotocol/inspector",
    "mcp:stream:example:server": "node ../../node_modules/@modelcontextprotocol/sdk/dist/esm/examples/server/simpleStreamableHttp.js",
    "mcp:stream:example:client": "node ../../node_modules/@modelcontextprotocol/sdk/dist/esm/examples/client/simpleStreamableHttp.js",
    "mcp:stdio:server:js:build": "dotenvx run -- tsc src/mcp/stdio/server.ts --outDir src/mcp/stdio/dist --target es2023 --module nodenext",
    "mcp:stdio:server:js:run": "dotenvx run -- node src/mcp/stdio/dist/server.js",
    "mcp:stdio:server": "dotenvx run -- tsx src/mcp/stdio/server.ts",
    "mcp:stdio:client": "dotenvx run -- tsx src/mcp/stdio/client.ts",
    "mcp:markitdown:client": "dotenvx run -- tsx src/mcp/markitdown-client/client.ts",
    "eval": "dotenvx run -- promptfoo eval --config promptfoo/*",
    "eval:view": "dotenvx run -- promptfoo view -y"
  },
  "dependencies": {
    "@ai-sdk/google": "1.2.19",
    "@dotenvx/dotenvx": "1.41.0",
    "@google/generative-ai": "0.24.0",
    "@hono/node-server": "1.14.1",
    "@hono/otel": "0.1.1",
    "@hono/zod-validator": "0.4.3",
    "@modelcontextprotocol/sdk": "1.12.1",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/auto-instrumentations-node": "0.58.1",
    "@opentelemetry/exporter-logs-otlp-http": "0.202.0",
    "@opentelemetry/exporter-trace-otlp-proto": "0.202.0",
    "@opentelemetry/resources": "2.0.1",
    "@opentelemetry/sdk-logs": "0.202.0",
    "@opentelemetry/sdk-node": "0.202.0",
    "@opentelemetry/sdk-trace-node": "2.0.1",
    "@opentelemetry/semantic-conventions": "1.34.0",
    "@scalar/hono-api-reference": "0.8.1",
    "@t3-oss/env-core": "0.12.0",
    "@workspace/core": "workspace:*",
    "ai": "4.3.16",
    "better-auth": "1.2.7",
    "drizzle-orm": "0.42.0",
    "drizzle-seed": "0.3.1",
    "drizzle-zod": "0.7.1",
    "fetch-to-node": "2.0.0",
    "hono": "4.7.6",
    "hono-openapi": "0.4.6",
    "hono-rate-limiter": "0.4.2",
    "mathjs": "14.4.0",
    "ollama": "0.5.14",
    "ollama-ai-provider": "1.2.0",
    "pdf-parse": "1.1.1",
    "pg": "8.14.1",
    "ts-pattern": "5.7.0",
    "type-fest": "4.39.1",
    "zod": "3.24.2",
    "zod-form-data": "2.0.7",
    "zod-openapi": "4.2.4",
    "zod-validation-error": "3.4.0"
  },
  "devDependencies": {
    "@types/bun": "1.2.9",
    "@types/node": "22.14.1",
    "@types/pdf-parse": "1.1.5",
    "@types/pg": "8.11.13",
    "@workspace/typescript-config": "workspace:*",
    "drizzle-kit": "0.31.0",
    "promptfoo": "0.112.3",
    "tsx": "4.19.3",
    "typescript": "5.8.3",
    "unpdf": "1.0.4"
  }
}
