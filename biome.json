{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["ultracite"],
  "files": {
    "ignore": ["**/.cache.json"]
  },
  "linter": {
    "rules": {
      "performance": {
        "useTopLevelRegex": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "nursery": {
        "noExportedImports": "off",
        "noNestedTernary": "off"
      }
    }
  }
}
